<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
  xmlns:atr="atr" xmlns:cmn="cmn" xmlns:gml="http://www.opengis.net/gml/3.2" targetNamespace="sespol" xmlns:sespol="sespol">
  <xs:import schemaLocation="../common/atributy.xsd" namespace="atr"/>
  <xs:import schemaLocation="../common/common.xsd" namespace="cmn"/>
  <xs:import schemaLocation="../ext/gml/gml.xsd"
    namespace="http://www.opengis.net/gml/3.2"/>
  <xs:element name="StaniceElektrickeSitePlocha" type="sespol:StaniceElektrickeSitePlochaType"/>
  <xs:complexType name="StaniceElektrickeSitePlochaType">
    <xs:sequence>
      <xs:element name="ObjektovyTypNazev" fixed="stanice elektrické sítě">
        <xs:complexType>
          <xs:simpleContent>
            <xs:extension base="xs:string">
              <xs:attribute name="code_base" type="xs:string" fixed="0100000103" use="required"/>
              <xs:attribute name="code_suffix" type="xs:string" fixed="03" use="required"/>    
            </xs:extension> 
          </xs:simpleContent> 
        </xs:complexType>
      </xs:element>
      <xs:sequence>
        <xs:element name="KategorieObjektu" type="xs:string" fixed="Stavby technické infrastruktury">
          <xs:annotation>
            <xs:documentation>Kategorie objektu dle Vyhlášky o DTM kraje</xs:documentation>
          </xs:annotation>
        </xs:element>
        <xs:element name="SkupinaObjektu" type="xs:string" fixed="Elektrické vedení">
          <xs:annotation>
            <xs:documentation>Skupina objektu dle Vyhlášky o DTM kraje</xs:documentation>
          </xs:annotation>
        </xs:element>
        <xs:element name="ObsahovaCast" type="xs:string" fixed="TI">
          <xs:annotation>
            <xs:documentation>Zařazení objektu do obsahové části dle Vyhlášky o DTM kraje</xs:documentation>
          </xs:annotation>
        </xs:element>
        <xs:element name="ZaznamyObjektu">
          <xs:annotation>
            <xs:documentation>Jednotlivé záznamy daného objektu</xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="ZaznamObjektu" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element ref="cmn:ZapisObjektu"/>
                    <xs:element name="AtributyObjektu">
                      <xs:complexType>
                        <xs:all>
                          <xs:element ref="atr:SpolecneAtributyVsechObjektu"/>
                          <xs:element ref="atr:SpolecneAtributyObjektuTI"/>
                          <xs:element ref="atr:StavObjektu"/>
                          <xs:element ref="atr:MaximalniNapetovaHladina"/>
                          <xs:element ref="atr:MaximalniProvozniNapeti"/>
                          <xs:element ref="atr:ProvozniNapeti"/>
                          <xs:element ref="atr:TypStaniceElektrickeSite"/>
                          <xs:element ref="atr:DruhStaniceElektrickeSite"/>
                        </xs:all>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="GeometrieObjektu" minOccurs="0">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element ref="gml:surfaceProperty"/>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                    <xs:element ref="atr:OblastObjektuKI" minOccurs="0"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:sequence>
  </xs:complexType>
</xs:schema>
