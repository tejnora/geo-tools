<Window x:Class="CAD.GUI.DrawLayerProp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DrawLayerProp" Height="300" Width="300" >
    <Grid>
        <Label Height="28" Margin="22,18,136,0" Name="label1" VerticalAlignment="Top">Layer name:</Label>
        <TextBox Height="23" Margin="0,20,25,0" Name="_layerName" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" />
        <Button Height="23" HorizontalAlignment="Left" Margin="30,0,0,25" Name="_ok" VerticalAlignment="Bottom" Width="75" Click="onClick" Tag="Ok">Ok</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,44,25" Name="_cancel" VerticalAlignment="Bottom" Width="75" Click="onClick" Tag="Cancel">Cancel</Button>
        <CheckBox Height="16" Margin="30,51,25,0" Name="_visble" VerticalAlignment="Top">Visible</CheckBox>
        <CheckBox Height="18" Margin="30,72,21,0" Name="_enable" VerticalAlignment="Top">Enabled</CheckBox>
    </Grid>
</Window>
