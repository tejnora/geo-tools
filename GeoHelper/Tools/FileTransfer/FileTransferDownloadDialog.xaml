<Gui:DialogBase x:Class="GeoHelper.Tools.FileTransferDownloadDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:Gui="clr-namespace:GeoBase.Gui;assembly=GeoBase"
                xmlns:loc="clr-namespace:GeoBase.Localization;assembly=GeoBase"
                LanguageNamespace="FileTransferDownloadDialog"
                Height="156"
                Width="300"
                loc:Translate.Uid="0"
                Title="{loc:Translate FileTransfer}"
                Buttons="Cancel"
                DefaultButton="Cancel"
                >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               x:Name="_text"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center">
            <Button x:Name="_cancleButton"
                    IsDefault="True"
                    Click="OnCancleClick" />
        </StackPanel>
    </Grid>
</Gui:DialogBase>