<Gui:DialogBase x:Class="GeoHelper.Protocols.Gui.ProtocolDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:Gui="clr-namespace:GeoBase.Gui;assembly=GeoBase"
                xmlns:loc="clr-namespace:GeoBase.Localization;assembly=GeoBase"
                LanguageNamespace="ProtocolDialog"
                loc:Translate.Uid="0"
                Title="{loc:Translate ProtocolDialog}"
                Height="500"
                Width="800"
                Closed="OnClosed">
    <Gui:DialogBase.DialogContent>
        <RichTextBox Grid.Row="0"
                     x:Name="_textEditor"
                     Margin="5,5,5,24.723"
                     FontFamily="Courier New"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin"
                            Value="0" />
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </Gui:DialogBase.DialogContent>
</Gui:DialogBase>